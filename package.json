{
  "name": "fullstack-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for fullstack development with node.js/express on back-end and React on front-end",
  "main": "server.js",
  "scripts": {
    "client-install": "cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Leon Kochetcov",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^3.5.1",
    "create-react-app": "^1.5.2",
    "express": "^4.16.3",
    "mongodb": "^3.1.0-beta4",
    "mongoose": "^5.1.2",
    "react-scripts": "^1.1.4",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "nodemon": "^1.17.5"
  }
}
